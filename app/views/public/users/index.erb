<div class="container">
  <div class="row">
    <div class="col-10">
      <h4><strong>マイページ</strong></h4>
      <table>
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <table>
        <tr>
          <td><%= link_to 'レビュー履歴一覧', history_path, class: 'btn btn-outline-warning' %></td>
          <% if @user.name != "guestuser" %>
            <td><%= link_to '編集する', edit_infomation_path, class: 'btn btn-success' %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>