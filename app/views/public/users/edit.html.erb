<h4><strong>会員情報編集</strong></h4>
<%= form_with model: @user, url: infomation_path(@user.id) do |f| %>
  <table>
    <tr>
      <td>会員ID</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
  </table>
  <table>
    <tr>
      <td><%= f.submit '変更を保存',class: 'btn btn-success' %></td>
      <td><%= link_to '退会する', confirm_path, class: 'btn btn-outline-danger' %></td>
    </tr>
  <% end %>
</table>
