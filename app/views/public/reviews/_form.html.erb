<div class="text-center">
  <%= link_to "記事一覧に戻る", games_path, class: 'btn btn-primary' %>
  <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">レビューを書く</button>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><strong>レビューを書く</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <%= form_with model: review, url: game_reviews_path(game) do |f| %>
          <div class="modal-body">
            <div class="rating-box">
              <div class="main-rating">
                <div class="ratings">
                  <span id="star" class="fa-regular fa-star fa-lg"></span>
                  <span id="star" class="fa-regular fa-star fa-lg"></span>
                  <span id="star" class="fa-regular fa-star fa-lg"></span>
                  <span id="star" class="fa-regular fa-star fa-lg"></span>
                  <span id="star" class="fa-regular fa-star fa-lg"></span>
                </div>
                <div class="rating-value-display"><span id="rating-value-display">0</span id="rating-value-display">/5</div>
              </div>
            <form>
              <div class="form-group text-left">
                <label for="review_title" class="col-form-label">レビュータイトル:</label>
                <input type="text" class="form-control" name="review[review_title]" id="review_title" placeholder="レビュータイトルを入力">
              </div>
              <div class="form-group text-left">
                <label for="review_comment" class="col-form-label">コメント:</label>
                <textarea class="form-control" name="review[review_comment]" id="review_comment" placeholder="コメントを入力(最大400文字)"></textarea>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <%= f.hidden_field :game_id, value: game.id %>
            <%= f.hidden_field :rate, id: "rating-value" %>
            <button type="button" class="btn btn-primary" data-dismiss="modal">閉じる</button>
            <%= f.submit 'レビューを投稿',class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_include_tag "reviews.js" %>