<div class="container">
  <div class="row">
    <div class="col-10">
      <h4 class= mx-5 my-5, style="background-color: #eee; width:360px; padding-left: 12px; margin-bottom: 40px;"><strong><%= @user.name %>さんの会員情報詳細</strong></h4>
      <table>
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><% if @user.is_active == true %>
                <td class="text-success"><b>有効</b></td>
              <% else %>
                <td class="text-secondary"><b>退会</b></td>
              <% end %></td>
        </tr>
      </table>
      <table>
        <tr>
          <td><%= link_to '編集する', edit_admin_user_path, class: 'btn btn-success' %></td>
        </tr>
      </table>
    </div>
  </div>
</div>