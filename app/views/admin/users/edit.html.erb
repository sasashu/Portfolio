<h3><strong>会員情報編集</strong></h3>
<%= form_with model: @user, url: admin_user_path(@user) do |f| %>
  <table>
    <tr>
      <td>会員ID</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.radio_button :is_active, :true %><%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, :false %><%= f.label :is_active, "退会" %>
      </td>
    </tr>
  </table>
  <table>
    <tr>
      <td><%= f.submit '変更を保存',class: 'btn btn-success' %></td>
    </tr>
  </table>
<% end %>

