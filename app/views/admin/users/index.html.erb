<table class='table table-sm'>
  <thead style="background-color: #eee;">
      <th>会員ID</th>
      <th><u>氏名</u></th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to admin_user_path(user),class: 'text-dark' do %>
          <u><%= user.name %></u>
          <% end %>
        </td>
        <td><%= user.email %></td>
          <% if user.is_active == true %>
            <td class="text-success">有効</td>
          <% else %>
            <td class="text-secondary">退会</td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
  <div class="d-flex justify-content-center">
    <%= paginate @users %>
  </div>