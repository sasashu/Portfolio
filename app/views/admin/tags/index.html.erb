<div class="container">
  <div class="row">
    <h5 class='mx-5 my-5', style="background-color: #eee; width:220px; padding-left: 12px; margin-bottom: 40px;"><b>タグ一覧/追加</b></h5>
  </div>
  <div class="row">
    <%= render "admin/shared/error_messages", resource: @tag %>
    <%= form_with model: @tag, url:admin_tags_path do |f| %>
      <div class="form-inline">
        <span class="mr-3"><b><%= f.label :name, 'タグ名' %></b></span>
        <span class="mr-3"><%= f.text_field :name, placeholder: "タグ名", class: 'form-control' %></span>
        <span class="mr-3"><%= f.submit '新規登録', class: 'btn btn-success' %></span>
      </div>
    <% end %>
  </div>
  <div class="row mt-5">
    <div class="col-7">
      <table class='table'>
        <thead style="background-color: #eee;">
          <th class="text-center">タグ</th>
          <th></th>
        </thead>
        <% @tags.each do |tag| %>
        <tbody>
          <tr>
            <td><%= tag.name %></td>
            <td class="d-flex justify-content-end"><%= link_to "編集する", edit_admin_tag_path(tag.id), class: "btn btn-success" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>