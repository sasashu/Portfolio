<h4><strong>記事情報編集</strong></h4>
<%= form_with model: @game, url: admin_game_path(@game) do |f| %>
  <table class="table table-borderless">
    <tr>
      <td><%= f.label :title, "商品名" %></td>
      <td><%= f.text_field :title, class: 'form-control game_name', placeholder: "ゲームタイトル" %></td>
    </tr>
    <tr>
      <td><%= f.label :item_caption, "ゲーム紹介文" %></td>
      <td><%= f.text_area :item_caption, rows: 5, class: 'form-control', placeholder: "ここに説明文を記述します", row: 5 %></td>
    </tr>
    <tr>
      <td><%= f.label :sales_date, "発売日" %></td>
      <td><%= f.text_field :sales_date, class: 'form-control', placeholder: "yyyy/mm/dd" %></td>
    </tr>
    <tr>
      <td>
      <div class="check_box">
        <span>タグ</span>
        <%= collection_check_boxes(:game, :tag_ids, Tag.all, :id, :name) do |tag| %>
      <div>
        <%= tag.label do %>
        <%= tag.check_box %>
        <%= tag.text %>
        <% end %>
     <% end %>
     </div>
      </td>
    </tr>
    </table>


  <div class="d-flex justify-content">
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>
<% end %>
