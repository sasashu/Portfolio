<div class="container">
  <div class="row">
    <div class="col-10">
      <h4><strong>新規記事作成</strong></h4>

      <p>サーチ画面</p>
      <!--検索バーを表示-->
      <%= form_with url: new_admin_game_path, method: :get do %>
        <%= text_field_tag :title, @title %>
        <%= button_tag "探す" %>
      <% end %>
      
      <!--検索結果を表示-->
      <% if @books %>
        <% @books.each do |book| %>
          <!--hidden_fieldで画像、タイトル等の情報を送り、説明を表示させています。-->
          <div style="flex-direction: row;">
            <div class="book_date">
              <!--表示させたい情報を記述-->
              <%= form_with model: @game,url: admin_games_path do |f| %>
                <%#= link_to (image_tag(book.image_url)), book.item_url %>
                <div>
                  <%= link_to book.item_url do %>
                    <%= image_tag book.image_url, width: '30%', height: '30%' %>
                  <% end %>
                  <%= book.title %>
                </div>
                <%= book.label %>
                <%= book.sales_date %>
                <%= book.item_caption %>  
                <%= book.jan %>
                
                <!--ここでその情報を送っている-->
                <%= f.hidden_field :title,value: book.title %>
                <%= f.hidden_field :item_caption,value: book.item_caption %>
                <%= f.hidden_field :sales_date,value: book.sales_date %>
                <%= f.hidden_field :label,value: book.label %>
                <%= f.hidden_field :jan,value: book.jan %>
                <%= f.hidden_field :item_url,value: book.item_url %>
                <%= f.hidden_field :image_url,value: book.image_url %>
                
                <p><%= f.submit"記事を投稿", class: 'btn btn-outline-primary' %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
      
      <%= form_with model: @game, url:admin_games_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :title, "タイトル名" %></td>
            <td><%= f.text_field :title, class: 'form-control game_name', placeholder: "ゲームタイトル" %></td>
          </tr>
          <tr>
            <td><%= f.label :item_caption, "ゲーム紹介文" %></td>
            <td><%= f.text_area :item_caption, rows: 3, class: 'form-control', placeholder: "ここに説明文を記述します" %></td>
          </tr>
          <tr>
            <td><%= f.label :sales_date, "発売日" %></td>
            <td><%= f.text_field :sales_date, class: 'form-control', placeholder: "yyyy年mm月dd日" %></td>
          <tr>
            <td>
            <div class="check_box">
              <span>タグ</span>
              <%= collection_check_boxes(:game, :tag_ids, Tag.all, :id, :name) do |tag| %>
            <div>
              <%= tag.label do %>
              <%= tag.check_box %>
              <%= tag.text %>
              <% end %>
           <% end %>
           </div>
            </td>
          </tr>
          </table>
      
        <div class="d-flex justify-content">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>
    </div>
  </div>
</div>




